<script type="text/javascript">
$(function(){
	$("#addBtn").click(function(){
		window.location.href='${rc.contextPath}/card/addCardInfo.html';
	});
	$("#searchBtn").click(function(){		
		query();
	});
});


function query(pageNo){
	if(pageNo){
		$("#pageNo").val(pageNo);
	}
	$("#searchForm").submit();
	
}

function deleteItem(cardId){
	if(cardId){
		$('#my-confirm').modal({
	        relatedTarget: this,
	        onConfirm: function(options) {
	          window.location.href='${rc.contextPath}/card/deleteCardInfo.html?cardId='+cardId;
	        },
	        // closeOnConfirm: false,
	        onCancel: function() {

	        }
	      });
	}
}

function auditProgress(taskId){
	$("#modal_tbody").empty();
	var $modal = $("#progress_modal");
	$.ajax({
		type : 'post',
        url : '${rc.contextPath}/schedule/ajax/queryAuditProcess.json',
		data : {'taskId':taskId},
        dataType : 'json',  
        success : function(data){
			if(data.success){
				nodeList = data.data;
				var tbodyHtml = "";
				for(var i=0;i<nodeList.length;i++){
					tbodyHtml='<tr><td>'+nodeList[i].asigneeName+'</td><td>';
					if(nodeList[i].nodeState==1){
						//待审核
						tbodyHtml = tbodyHtml+'待审核';
					}else if(nodeList[i].nodeState==2){
						//审核中
						tbodyHtml = tbodyHtml+'审核中';
					}else if(nodeList[i].nodeState==3){
						//审核通过
						tbodyHtml = tbodyHtml+'审核通过';
					}else if(nodeList[i].nodeState==4){
						//审核不通过
						tbodyHtml = tbodyHtml+'审核不通过';
					}
					tbodyHtml = tbodyHtml + '</td><td>';
					if(nodeList[i].remark){
						tbodyHtml = tbodyHtml+nodeList[i].remark;
					}
					tbodyHtml = tbodyHtml+'</td></tr>';
					$("#modal_tbody").append(tbodyHtml);
				}
			}else{
				alert("操作失败！");
			}
        },  
        error : function(data,textstatus){
			alert("操作失败！");
        }  
    });
	$modal.modal();
}

</script>