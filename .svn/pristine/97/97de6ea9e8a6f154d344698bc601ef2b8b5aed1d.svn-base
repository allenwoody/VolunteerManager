package com.allen.web.service.item;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.allen.core.feature.orm.mybatis.Page;
import com.allen.core.generic.GenericDao;
import com.allen.core.generic.GenericServiceImpl;
import com.allen.web.dao.MedicalItemMapper;
import com.allen.web.enums.EnumBool;
import com.allen.web.model.MedicalItem;
import com.allen.web.model.MedicalItemExample;
import com.allen.web.model.MedicalItemExample.Criteria;
import com.hundsun.jresplus.common.util.StringUtil;

/**
 * 
 * @ClassName: MedicalItemServiceImpl
 * @Description: 诊疗项目服务实现类
 * @author wenquan
 * @date 2016年7月7日 上午10:09:53
 *
 */
@Service
public class MedicalItemServiceImpl extends GenericServiceImpl<MedicalItem, String>implements MedicalItemService {

	@Resource
	MedicalItemMapper medicalItemMapper;

	@Override
	public List<MedicalItem> selectList() {
		MedicalItemExample example = new MedicalItemExample();
		example.createCriteria().andIsValidEqualTo(EnumBool.YES.getCode());
		return this.medicalItemMapper.selectByExample(example );
	}
	
	@Override
	public List<MedicalItem> selectList(Page<MedicalItem> page, MedicalItem medicalItem) {
		MedicalItemExample example = new MedicalItemExample();
		Criteria criteria = example.createCriteria();
		criteria.andIsValidEqualTo(EnumBool.YES.getCode());
		if (StringUtil.isNotBlank(medicalItem.getItemName())) {
			criteria.andItemNameLike("%"+medicalItem.getItemName()+"%");
		}
		return this.medicalItemMapper.selectByExample(example, page);
	}

	@Override
	public int delete(String id) {
		MedicalItem record = new MedicalItem();
		record.setItemId(id);
		record.setIsValid(EnumBool.NO.getCode());
		return this.medicalItemMapper.updateByPrimaryKeySelective(record);
	}

	@Override
	public GenericDao<MedicalItem, String> getDao() {
		return this.medicalItemMapper;
	}


}
