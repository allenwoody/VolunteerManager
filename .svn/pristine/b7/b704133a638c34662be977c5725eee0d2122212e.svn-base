	$('#my-confirm').on('closed.modal.amui', function() {
		  $(this).removeData('amui.modal');
		});
});
function deleteItem(orgId){
	if(orgId){
		var tree = $("#treetable").fancytree("getTree")
		var node = tree.getNodeByKey(orgId);
       	if(node.hasChildren()){
       		alert("不能删除有子机构的机构");
       		return false;
       	}
		$('#my-confirm').modal({
	        relatedTarget: this,
	        onConfirm: function(options) {
	          window.location.href='${rc.contextPath}/organization/deleteOrganization.html?orgId='+orgId;
	        },
	        // closeOnConfirm: false,
	        onCancel: function() {

	        }
	      });
	}
}
</script>